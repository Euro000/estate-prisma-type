// --- datasource -------------------------------------------------------------
datasource db {
  provider = "sqlite" // self-contained; no env vars required
  url      = "file:./dev.db"
}

// --- client generator -------------------------------------------------------
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated" // generates TS + JS into src/generated
}

// --- demo models (replace with your real ones later) ------------------------
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  posts     Post[]
  createdAt DateTime @default(now())
}

model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())
}
